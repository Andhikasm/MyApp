<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_face_black_64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="23dp"
        android:id="@+id/user_single_image" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_single_image"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/user_single_image"
        android:layout_toRightOf="@+id/user_single_image"
        android:text="Default Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_single_name"
        android:layout_alignLeft="@+id/user_single_name"
        android:layout_alignRight="@+id/user_single_name"
        android:layout_alignStart="@+id/user_single_name"
        android:layout_below="@+id/user_single_name"
        android:text="Default Status"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/user_single_name"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/user_single_name"
        android:layout_toRightOf="@+id/user_single_name"
        android:src="@mipmap/ic_green_dot"
        android:visibility="invisible" />

    <Button
        android:id="@+id/accept_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:textColor="#FFFFFF"
        android:background="#388E3C"
        android:layout_below="@+id/user_single_status"
        android:layout_alignLeft="@+id/user_single_status"
        android:layout_alignStart="@+id/user_single_status" />

    <Button
        android:background="#d32f2f"
        android:textColor="#FFFFFF"
        android:id="@+id/decline_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_single_status"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/accept_request_button"
        android:layout_toRightOf="@+id/accept_request_button"
        android:text="Button" />

</RelativeLayout>