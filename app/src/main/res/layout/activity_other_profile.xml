<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="com.andhikasrimadeva.myapp.OtherProfileActivity">

    <ImageView

        android:id="@+id/other_profile_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/darker_gray"
        android:src="@mipmap/ic_avatar" />

    <TextView
        android:id="@+id/other_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/other_profile_image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/other_profile_totalFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Friends"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/other_profile_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/other_profile_sendReq"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#d50000"
        android:text="SEND FRIEND REQUEST"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/other_profile_declineReq"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/other_profile_declineReq"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#d50000"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/other_profile_sendReq"
        android:layout_alignStart="@+id/other_profile_sendReq"
        android:layout_marginBottom="16dp" />


</RelativeLayout>
